---
import favicon from "./_favicon.svg"
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Tic Tac Toe</title>
		<meta name="description" content="Enjoy the classic game of Tic Tac Toe in your browser! Play against friends or use random matchmaking and beat them all to pulp!."/>
		<link rel="icon" type="image/svg+xml" href={favicon.src} />
		<link rel="preload" href="https://fonts.gstatic.com/s/sueellenfrancisco/v20/wXK3E20CsoJ9j1DDkjHcQ5ZL8xRaxru9no1P2w.woff2" as="font" type="font/woff2" crossorigin>
		<style>
			@import "../tokens.css";
			@font-face {
				font-family: "Sue Ellen Francisco";
				font-style: normal;
				font-weight: 400;
				font-display: swap;
				src: url(https://fonts.gstatic.com/s/sueellenfrancisco/v20/wXK3E20CsoJ9j1DDkjHcQ5ZL8xRaxru9no1P2w.woff2) format('woff2');
				unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
			}
			body {
				font-family: "Sue Ellen Francisco";
				margin: 0;
				height: 100dvh;
				display: grid;
				place-items: center;
				background: var(--primary-container);
				transition: background 250ms;
			}
			p {
				font-size: 2rem;
				color: var(--primary);
				transition: opacity 250ms 250ms;
			}
			@starting-style { p { opacity: 0; } }
			p:after {
				display: inline-block;
				width: 0;
				animation: ellipsis linear 3s infinite;
				content: "";
			}
			@keyframes ellipsis {
				0%, 32% { content: "." }
				33%, 66% { content: ".." }
				67%, 100% { content: "..." }
			}
		</style>
		<script>
			import { h, render } from "preact"
			import { GameUI } from "components/GameUI.tsx"
			
			document.querySelector("#loading")!.remove()
			render(h(GameUI, {}), document.querySelector("body")!)
		</script>
	</head>
	<body>
		<p id="loading">loading</p>
	</body>
</html>
